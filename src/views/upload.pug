extends base.pug

block content
    if errorMessage
        span=errorMessage

    form(method="POST")
        input(name="title", placeholder="Title", maxlength=80, required)
        input(name="description", placeholder="Description", minlength=20, required)
        input(name="hashtags", placeholder="Hashtags, separated by comma.", required)
        input(type="submit", value="Upload Video")