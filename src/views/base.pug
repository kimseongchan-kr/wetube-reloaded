doctype html
html(lang="ko")
    head
        title #{pageTitle} | Wetube
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
    body 
        header 
            h1=pageTitle
            nav
                ul
                    li
                        a(href="/") HOME 
                    li
                        a(href="/search") SEARCH
                    if loggedIn
                        li
                            a(href="/logout") LOGOUT
                        li
                            a(href="/users/edit")=loggedInUser.username
                    else
                        li
                            a(href="/join") JOIN
                        li 
                            a(href="/login") LOGIN

                    
        main
            block content
    include partials/footer